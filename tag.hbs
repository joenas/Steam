{{!< default}}
<main class="content">
  <h3 class="posts-tagged"><span class="fa fa-fw fa-tag"></span> {{tag.name}}</h3>
    {{#foreach posts}}
    <article class="preview">
        <header>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt words="90"}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Keep reading <span class="fa fa-angle-double-right" style="padding-left: 5px;"></span></a></p>
        </section>
    </article>
    {{/foreach}}
    {{pagination}}
</main>
