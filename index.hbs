{{!< default}}
<main class="content">
    {{#foreach posts}}
    <article class="preview">
        <header>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <div class="post-meta">
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                {{#if tags}}<div class="tags"><span class="fa fa-fw fa-tags"></span> {{tags}}</div>{{/if}}
            </div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt words="30"}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Keep reading <span class="fa fa-angle-double-right" style="padding-left: 5px;"></span></a></p>
        </section>
    </article>
    {{/foreach}}
    {{pagination}}
</main>
